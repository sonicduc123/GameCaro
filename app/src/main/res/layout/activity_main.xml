<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:scaleType="centerCrop"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent"
        >
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="180dp"
               android:layout_height="220dp"
               android:id="@+id/imgLogo1"
               android:rotationX="0"
               android:paddingTop="40dp"
               android:rotationY="0"
               android:src="@drawable/x"
               android:layout_weight="10"
               android:layout_gravity="center_horizontal"
               />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="300dp"
                    android:id="@+id/imgLogo"
                    android:rotationX="0"
                    android:paddingTop="100dp"
                    android:rotationY="0"
                    android:src="@drawable/o"
                    android:layout_weight="10"
                    android:layout_gravity="center_horizontal"
                    />
                <Button
                    android:id="@+id/btnGuide"
                    android:layout_width="35dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_baseline_settings_24">
                </Button>
            </RelativeLayout>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="75dp"
                android:id="@+id/imgLogo2"
                android:paddingTop="35dp"
                android:layout_marginBottom="40dp"
                android:rotationX="30"
                android:rotationY="30"
                android:src="@drawable/o"
                android:layout_weight="10"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:id="@+id/imgLogo5"
                android:layout_marginBottom="40dp"
                android:paddingTop="30dp"
                android:rotationX="40"
                android:rotationY="40"
                android:src="@drawable/x"
                android:layout_weight="10"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:id="@+id/imgLogo3"
                android:paddingTop="40dp"
                android:layout_marginBottom="40dp"
                android:rotationX="30"
                android:rotationY="-30"
                android:src="@drawable/o"
                android:layout_weight="10"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imgLogo4"
                android:layout_marginBottom="40dp"
                android:rotationX="-30"
                android:rotationY="40"
                android:src="@drawable/x"
                android:layout_weight="10"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1"
            android:orientation="horizontal">
            <TableRow>
                <ImageView android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/twoPlayerImg"
                    android:src="@drawable/twoplayer"/>
                <ImageView android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/computerImg"
                    android:src="@drawable/computer"/>
            </TableRow>

            <TableRow>
              <LinearLayout android:layout_gravity="center_horizontal" >
                  <Button
                      android:id="@+id/btnTwoPlayer"
                      android:layout_width="wrap_content"
                      android:background="@drawable/custom_btn"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginBottom="20dp"
                      android:textColor="@color/colorWhite"
                      android:textStyle="italic|bold"
                      android:paddingHorizontal="20dp"
                      android:layout_height="50dp"
                      android:text="2 PLAYERS" />
              </LinearLayout>
               <LinearLayout
                   android:layout_gravity="center_horizontal"
                   >
                   <Button
                       android:id="@+id/btnComputer"
                       android:layout_width="wrap_content"
                       android:textStyle="italic|bold"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="20dp"
                       android:paddingHorizontal="20dp"
                       android:background="@drawable/custom_btn"
                       android:textColor="@color/colorWhite"
                       android:layout_height="50dp"
                       android:text="COMPUTER" />
               </LinearLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</LinearLayout>